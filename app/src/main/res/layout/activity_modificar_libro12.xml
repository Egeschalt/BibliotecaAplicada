<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondotercero"
    tools:context=".ModificarLibro1_2_Activity">

    <EditText
        android:id="@+id/et_idiomaModificarP2"
        android:layout_width="317dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Ingrese idioma del libro"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#BDBDBD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/inter"
        android:text="Idioma"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_generoModificarP2" />

    <EditText
        android:id="@+id/et_generoModificarP2"
        android:layout_width="317dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Ingrese genero del libro"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#BDBDBD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView42" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/inter"
        android:text="Genero"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_editorialModificarP2" />

    <EditText
        android:id="@+id/et_editorialModificarP2"
        android:layout_width="317dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Ingrese editorial del libro"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#BDBDBD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/inter"
        android:text="Editorial"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_autorModificarP2" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/inter"
        android:text="Título"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="298dp"
        android:layout_height="117dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans_bold"
            android:text="MODIFICAR"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/tv_usuario6"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:fontFamily="@font/josefin_sans_light"
            android:text="LIBRO"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textSize="37dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_tituloModificarP2"
        android:layout_width="317dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Ingrese título del libro"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#BDBDBD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView39" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/inter"
        android:text="Autor"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_tituloModificarP2" />

    <EditText
        android:id="@+id/et_autorModificarP2"
        android:layout_width="317dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Ingrese autor del libro"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="#BDBDBD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView44" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/inter"
        android:text="Fecha de publicación"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_idiomaModificarP2" />

    <CalendarView
        android:id="@+id/calendarv_fechaPublicacionModificarP2"
        android:layout_width="319dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView45" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/inter"
        android:text="Imagen"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarv_fechaPublicacionModificarP2" />

    <ImageButton
        android:id="@+id/imbtn_buscarImagenModificarP2"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:background="@drawable/bordes_botones_bibliotecario"
        android:contentDescription="Buscar Imagen de Libro"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView46"
        tools:srcCompat="@drawable/buscar_icono" />

    <ImageView
        android:id="@+id/img_mostrarImagenModificarP2"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginEnd="176dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView46"
        app:srcCompat="@drawable/rectangle_9" />

    <Button
        android:id="@+id/btn_modificarP2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/borderedondeado"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="Modificar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imbtn_buscarImagenModificarP2" />

    <EditText
        android:id="@+id/et_stockModificarP2"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="number"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_mostrarImagenModificarP2"
        app:layout_constraintTop_toBottomOf="@+id/calendarv_fechaPublicacionModificarP2" />

</androidx.constraintlayout.widget.ConstraintLayout>